syntax enable

" 行番号
set number

" 折りたたみ嫌
set nofoldenable

" バックアップ嫌
set nobackup

" スワップ嫌
set noswapfile

" ビジュアルベル嫌
set vb t_vb=

" ファイルブラウザの初期Dir
set browsedir=buffer

" コマンド (の一部) を画面の最下行に表示する
set showcmd

" カーソルが何行目の何列目に置かれているかを表示する
set ruler

" ステータスバー必要
set laststatus=2

" 自動読み込み
set autoread

" カッコのマッチ
set showmatch

" バックスペースでインデント消したい
set backspace=indent,eol,start

" カレント行ハイライト
set cursorline

" タブ幅の設定
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=0

" インデントオート
set autoindent
